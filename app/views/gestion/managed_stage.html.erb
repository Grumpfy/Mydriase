<%= currently_at 'Gestion du stage' %>

<% if @managed_stage %>

  <% content_for :title do "#{@managed_stage.title}" end %>
  <% content_for :subtitle do %>
    <%= time_tag @managed_stage.start %> - <%= time_tag @managed_stage.end%>
  <% end %>

  <b>Inscrits: </b><%= @managed_stage.inscriptions.count %>
	<br/>
	<b>Filtres:</b>
	<%= link_to "aucun", managed_stage_path() %> |
	<%= link_to "attente confirmation 1", managed_stage_path(:conf_level => 1) %> |
	<%= link_to "attente confirmation 2", managed_stage_path(:conf_level => 2) %> 

	<br/><br/>
	<%= table_for_managed_stage(@inscriptions.by_name) %>

  <p>
    Download:
    <%= link_to "CSV", managed_stage_path(params.merge({format: "csv"})) %> 
  </p>
	
<% end %>




