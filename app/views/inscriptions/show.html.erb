<h1>Inscription</h1>
<h2><%= "#{@inscription.adherent.nom} #{@inscription.adherent.prenom} - #{@inscription.stage.title}" %></h2>

<fieldset>
	<legend>D&eacute;tails</legend>

	<table>
		<tr>
			<td><b>Atelier:</b></td>
			<td><%= @inscription.atelier.title %></td>
		</tr>
		<% if not @inscription.remarques.strip.empty? %>
		<tr>
			<td><b>Remarques globales:</b></td>
			<td><%= @inscription.remarques %></td>
		</tr>
		<% end %>
		<tr>
			<td><b>Mineur:</b></td>
			<td><%= @inscription.minor ? "oui" : "non" %></td>
		</tr>
	</table>
	
</fieldset>

<%= link_to 'Edit', edit_inscription_path(@inscription) %> |
<%= link_to 'Back', @inscription.adherent %>
