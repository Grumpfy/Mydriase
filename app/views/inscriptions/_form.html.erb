<%= form_for(@inscription) do |f| %>
  <% if @inscription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inscription.errors.count, "error") %> prohibited this inscription from being saved:</h2>

      <ul>
      <% @inscription.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :adherent_id %><br />
		<%= f.select :adherent_id, Adherent.order(:nom).collect {|a| [ "#{a.nom} #{a.prenom}", a.id ] } %>
  </div>
  <div class="field">
    <%= f.label :stage_id %><br />
		<%= f.select :stage_id, Stage.order("start DESC").collect {|s| [ s.title, s.id ] } %>
  </div>
  <div class="field">
    <%= f.label :atelier_id %><br />
		<%= f.select :atelier_id, Atelier.where("stage_id = ?", @inscription.stage_id).collect {|s| [ s.title, s.id ] } %>
  </div>
  <div class="field">
    <%= f.label :remarques %><br />
    <%= f.text_area :remarques %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
