<div class="app_form">

  <%= form_for(@billing) do |f| %>
    <% if @billing.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@billing.errors.count, "error") %> prohibited this billing from being saved:</h2>

        <ul>
          <% @billing.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.hidden_field :inscription_id %>

    <fieldset>
      <table>
				<tr>
					<td><%= f.label :price, 'Montant:' %></td>
					<td><%= f.text_field :price, size: 8 %></td>
				</tr>
				<tr>
					<td><%= f.label :description, 'Description:' %></td>
					<td><%= f.text_area :description, size: "50x1" %></td>
				</tr>
				<tr>
					<td colspan="2"><%= f.submit 'Valider' %></td>
				</tr>
      </table>
    </fieldset>
    
  <% end %>

</div>
