<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1><%= @stage.title %></h1>

<p>
  <b>D&eacute;but:</b>
  <%= time_tag @stage.start %>
</p>

<p>
  <b>Fin:</b>
  <%= time_tag @stage.end %>
</p>

<p>
  <b>Ateliers:</b>
	<ul>
		<% @stage.ateliers.order(:title).each do |atelier| %>
		<li>
			<%= atelier.title %>
		</li>
		<% end %>
		<% if @stage.end > DateTime.now %>
		  <li><%= link_to 'Ajouter un atelier', new_atelier_path(stage_id: @stage.id) %></li>
		<% end %>
	</ul>
</p>

<%= link_to 'Edit', edit_stage_path(@stage) %> |
<%= link_to 'Back', stages_path %>
