
<div class="app_form">
  <%= form_tag do %>
  <fieldset>
    <legend>Log In</legend>
		<table>
			<tr>
				<td><%= label_tag :name, 'Nom:' %></td>
				<td><%= text_field_tag :name, params[:name] %></td>
			</tr>
			<tr>
				<td><%= label_tag :password, 'Password:' %></td>
				<td><%= password_field_tag :password, params[:password] %></td>				
			</tr>
			<tr>
				<td colspan="2"><%= submit_tag "Login" %></td>
			</tr>
		</table>
  </fieldset>
  <% end %>
</div>
