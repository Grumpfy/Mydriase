<h1>Adh&eacute;rents</h1>

<table>

<% @adherents.each do |adherent| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><b><%= "#{adherent.nom} #{adherent.prenom}" %></b></td>
    <td><%= adherent.ville %></td>
    <td class="list_actions"><%= link_to 'Show', adherent %></td>
    <td class="list_actions"><%= link_to 'Edit', edit_adherent_path(adherent) %></td>
    <td class="list_actions"><%= link_to 'Destroy', adherent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

